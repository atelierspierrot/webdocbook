<nav class="hidden-print">
    <ul class="pager">
{% if contents.route is not empty and contents.route != '/' %}
    {% if contents.previous is not empty %}
        <li class="previous">
            <a href="{{ contents.previous.path|route }}" title="{{ 'See the previous page in this chapter'|translate }}">
                {{ icon('chevron-left')|raw }}&nbsp;{{ contents.previous.name|readableName }}&nbsp;{{ icon(contents.previous.type)|raw }}
            </a>
        </li>
    {% endif %}
    {% if contents.next is not empty %}
        <li class="next">
            <a href="{{ contents.next.path|route }}" title="{{ 'See the next page in this chapter'|translate }}">
                {{ icon(contents.next.type)|raw }}&nbsp;{{ contents.next.name|readableName }}&nbsp;{{ icon('chevron-right')|raw }}
            </a>
        </li>
    {% endif %}
{% endif %}
    </ul>
</nav>
