{% extends WDB.getTemplate('page_layout') %}

{% block title %}{{ 'Error'|translate }}{% endblock %}

{% block metas %}
    <meta name="robots" content="none">
{% include WDB.getTemplate('metas') %}
{% endblock %}

{% block stylesheets %}
    <link href="{{ assets }}styles_error.css" rel="stylesheet">
{% endblock %}

{% block body_attributes %}{% endblock %}

{% block body %}
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="navbar-inner">
{% include WDB.getTemplate('navbar') with {'inpage_menu': 'false'} %}
        </div>
    </div>
    <div class="container">
{% include WDB.getTemplate('ltie7_warning') %}
        <div class="error-wrapper">
            <header id="top" role="banner">
            <hgroup>
                <div class="page-header">
                    <h1>{{ 'Error'|translate }} <span>:(</span></h1>
                </div>
            </hgroup>
            </header>
            <div class="jumbotron">
                <p>{{ 'Sorry, but the page you were trying to load causes an error (internal server error).'|translate }}</p>
                <p>{{ 'It looks like this was the result of either:'|translate }}</p>
                <ul>
                    <li><p>{{ 'a mistyped address'|translate }}</p></li>
                    <li><p>{{ 'an out-of-date link'|translate }}</p></li>
                    <li><p>{{ 'a typo in the code'|translate }}</p></li>
                </ul>
            </div>
{% if message is not empty %}
            <p class="small"><a id="error-info_handler" href="#0">guru meditation</a></p>
            <div id="error-info">
                <h3 class="small">{{ 'Message received from the system'|translate }}</h3>
                <blockquote><p class="small text-info">{{ message }}</p></blockquote>
            </div>
{% endif %}
        </div>
        <hr />
    </div> <!-- /container -->
{% endblock %}
