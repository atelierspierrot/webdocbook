{% include WDB.getTemplate('internal_pages_header') %}

<div class="row">
    <div class="hidden-xs col-sm-1 col-md-1 col-lg-1"></div>
    <div class="col-xs-12 col-sm-10 col-md-10  col-lg-10">
        <section>
            <div class="content">
                <p>
                    {{ 'An every day manual on how to use <strong>WebDocBook</strong> and <strong>Markdown</strong>.'|translate|raw }}
                </p>
            </div>
        </section>
    </div>
    <div class="hidden-xs col-sm-1 col-md-1 col-lg-1"></div>
</div>
<hr />

<div role="tabpanel" id="user_manual_page">

    <ul class="nav nav-tabs" role="tablist">
        <li role="presentation" class="active" id="user_manual_handler">
            <a href="#user_manual" aria-controls="user_manual" role="tab" data-toggle="tab" class="noscrollto">
                <span class="hidden-xs">{{ 'WebDocBook manual'|translate }}</span>
                <span class="hidden-sm">WebDocBook</span>
            </a>
        </li>
        <li role="presentation" id="md_manual_handler">
            <a href="#md_manual" aria-controls="md_manual" role="tab" data-toggle="tab" class="noscrollto">
                <span class="hidden-xs">{{ 'Markdown syntax manual'|translate }}</span>
                <span class="hidden-sm">Markdown</span>
            </a>
        </li>
        <li role="presentation" id="about_handler">
            <a href="#about" aria-controls="about" role="tab" data-toggle="tab" class="noscrollto">
                <span class="hidden-xs">{{ 'About WDB'|translate }}</span>
                <span class="hidden-sm">About</span>
            </a>
        </li>
    </ul>

    <div class="tab-content">
        <div role="tabpanel" class="tab-pane fade in active" id="user_manual">
            <div class="content">
                {% if user_manual_menu is not empty %}
                    <aside id="user_manual_menu">
                        <div class="bs-sidebar hidden-print pull-left navbar-section" role="complementary">
                            {{ user_manual_menu|raw }}
                        </div>
                    </aside>
                {% endif %}
                {{ user_manual_content|raw }}
            </div>
        </div>
        <div role="tabpanel" class="tab-pane fade" id="md_manual">
            <div class="content">
                {% if md_manual_menu is not empty %}
                    <aside id="md_manual_menu">
                        <div class="bs-sidebar hidden-print pull-left navbar-section" role="complementary">
                            {{ md_manual_menu|raw }}
                        </div>
                    </aside>
                {% endif %}
                {{ md_manual_content|raw }}
            </div>
        </div>
        <div role="tabpanel" class="tab-pane fade" id="about">
            <div class="content">
                {{ about_content|raw }}
            </div>
        </div>
    </div>

</div>

<hr />
