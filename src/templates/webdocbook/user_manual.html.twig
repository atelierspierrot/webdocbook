<div class="page-header">
    <h1>
        {{ title|default(manifest.title) }}
        <small>{{ manifest.name }} {{ manifest.version }}{% if profiler.git_clone %} - clone{% endif %}</small>
    </h1>
    <p>An every day manual on how to use <strong>WebDocBook</strong> and <strong>Markdown</strong>.</p>
</div>

{% include 'webdocbook/session_messages.html.twig' %}

<div role="tabpanel">

    <ul class="nav nav-tabs" role="tablist">
        <li role="presentation" class="active">
            <a href="#user_manual" aria-controls="user_manual" role="tab" data-toggle="tab" class="noscrollto">
                WebDocBook manual
            </a>
        </li>
        <li role="presentation">
            <a href="#md_manual" aria-controls="md_manual" role="tab" data-toggle="tab" class="noscrollto">
                Markdown syntax manual
            </a>
        </li>
        <li role="presentation">
            <a href="#about" aria-controls="about" role="tab" data-toggle="tab" class="noscrollto">
                About WDB
            </a>
        </li>
    </ul>

    <div class="tab-content">
        <div role="tabpanel" class="tab-pane fade in active" id="user_manual">
            {{ user_manual_content|raw }}
        </div>
        <div role="tabpanel" class="tab-pane fade" id="md_manual">
            {{ md_manual_content|raw }}
        </div>
        <div role="tabpanel" class="tab-pane fade" id="about">
            {{ about_content|raw }}
        </div>
    </div>

</div>

<hr />
