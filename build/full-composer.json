{
    "name": "wdbo/webdocbook",
    "title": "DocBook",
    "type": "project",
    "description": "Simple CMS PHP app to build rich HTML5 views from a Markdown contents filesystem.",
    "keywords": [ "cms", "markdown" ],
    "homepage": "http://github.com/wdbo/webdocbook",
    "version": "1.4.0-alpha",
    "license": "GPL-3.0",
    "authors": [{
        "name": "Pierre Cassat & contributors",
        "email": "contact@webdocbook.com",
        "homepage": "http://www.ateliers-pierrot.fr/"
    }],
    "support": {
        "issues": "http://github.com/wdbo/webdocbook/issues",
        "source": "http://github.com/wdbo/webdocbook/tags"
    },
    "require": {
        "php": ">=5.3.0",
        "psr/log": "1.0.0",
        "atelierspierrot/patterns": "1.0.8",
        "atelierspierrot/library": "1.1.7",
        "atelierspierrot/webfilesystem": "1.0.2",
        "piwi/markdown-extended": "dev-master",
        "atelierspierrot/internationalization": "1.0.3",
        "twig/twig": "1.*",
        "fxp/composer-asset-plugin":"~1.0",
        "bower-asset/jquery": "1.11.*",
        "bower-asset/bootstrap": "~3.3.1",
        "bower-asset/html5shiv": "~3.7.2",
        "bower-asset/fontawesome": "~4.2.0",
        "bower-asset/jquery.tablesorter": "~2.18.4",
        "bower-asset/jquery.highlight": "*"
    },
    "require-dev": {
        "sami/sami": "dev-master",
        "dropbox/dropbox-sdk": "1.1.*"
    },
    "autoload": { "psr-0": { 
        "DocBook": "src",
        "DocBook_": "src"
    } },
    "config": {
        "vendor-dir": "src/vendor"
    },
    "scripts": {
        "post-update-cmd": "WebDocBook\\Composer\\Scripts::postUpdate",
        "post-install-cmd": "WebDocBook\\Composer\\Scripts::postInstall",
        "post-autoload-dump": "WebDocBook\\Composer\\Scripts::postAutoloadDump",
        "post-create-project-cmd": "WebDocBook\\Composer\\Scripts::postCreateProject",
        "docbook-clear-cache": "WebDocBook\\Composer\\Scripts::docbookClearCache",
        "docbook-clearcache": "WebDocBook\\Composer\\Scripts::docbookClearCache",
        "docbook-clear-i18n": "WebDocBook\\Composer\\Scripts::docbookClearI18n",
        "docbook-flush": "WebDocBook\\Composer\\Scripts::docbookClearI18n",
        "docbook-init": "WebDocBook\\Composer\\Scripts::docbookInit"
    },
    "minimum-stability": "dev",
    "extra": {
        "license_url": "http://github.com/wdbo/webdocbook/blob/master/LICENSE",
        "license_name": "General Public Licence version 3.0",
        "asset-installer-paths": {
            "bower-asset-library": "www/webdocbook_assets/vendor"
        },
        "branch-alias": {
            "dev-master": "1.4.*-dev"
        }
    }
}
